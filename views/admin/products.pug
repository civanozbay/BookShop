extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css")
block content
    main
        if prods.length > 0
            .grid
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}                       
                        
                        //- div.card__image
                        //-     //- -var attributes = {}
                        //-     //- -attributes.src = '#{product.imageUrl}'
                        //-     //- -attributes.alt = '#{product.title}'
                        //-     //- img&attributes(attributes)
                        //-     mixin card(src,alt)
                        //-         -var attributes =({src,alt})
                        //-         img&attributes(attributes)
                        //-     +card('#{product.imageUrl}','#{product.title}')
                        mixin card(src, alt)
                            img(src=src, alt=alt)

                        div.card__image
                            +card(product.imageUrl, product.title)

                        
                        
                        div.card__content
                            h2.product__price $#{product.price}
                            p.product__description #{product.description}
                        
                        div.card__actions
                            a.button.btn(href="/admin/edit-product") Edit
                            form(action="/admin/delete-product",method="POST")
                                button.btn(type="submit") Delete
        else 
            h1 No Products
